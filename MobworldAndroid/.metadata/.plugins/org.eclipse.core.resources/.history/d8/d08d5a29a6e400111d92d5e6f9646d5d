package graphics;

import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;

public class ThumbStick {
	Paint paint;
	public ThumbStick()
	{
		paint = new Paint();
	}
	
	public void drawStick(Canvas canvas)
	{
		float screenHeight = canvas.getHeight();
		
		//draw the thumbstick
		paint.setColor(Color.LTGRAY);
		canvas.drawCircle(10, screenHeight - 60, 48, paint);
		paint.setColor(Color.GRAY);
		canvas.drawCircle(20, screenHeight - 50, 28, paint);
		
	}

	public boolean ButtonAHit(float locx, float locy)
	{
		boolean success = false;
		
		return success;
	}
	
	public boolean ButtonBHit(float locx, float locy)
	{
		boolean success = false;
		
		return success;
	}

}
